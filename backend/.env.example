# Copy this file to .env and fill in real values before running the server.
# NEVER commit .env to version control.

# PostgreSQL connection string
DATABASE_URL="postgresql://YOUR_MAC_USERNAME:@localhost:5432/hipaa_messenger?schema=public"

# JWT signing secret — use a long random string in production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="replace-me-with-a-long-random-string"

# AES-256-GCM encryption key — must be exactly 64 hex characters (32 bytes)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="replace-me-with-64-hex-chars"

# Server port (default 4000)
PORT=4000

# Frontend origin for CORS
FRONTEND_URL="http://localhost:5173"

# Resend API key — used to send account unlock emails
# Get your key at https://resend.com/api-keys
RESEND_API_KEY="re_replace_me"

# The "from" address for outbound emails (must be a verified domain in Resend)
FROM_EMAIL="noreply@yourdomain.com"

# Set to "production" to disable development-only features
NODE_ENV="development"
